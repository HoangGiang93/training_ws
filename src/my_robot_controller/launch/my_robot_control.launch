<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find my_robot_controller)/config/my_ur5_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node pkg="controller_manager" name="controller_spawner" type="spawner" respawn="false"
    output="screen" ns="/my_ur5" args="my_ur5_shoulder_pan_joint_position_controller my_ur5_shoulder_lift_joint_position_controller 
    my_ur5_elbow_joint_position_controller my_ur5_wrist_1_joint_position_controller
    my_ur5_wrist_2_joint_position_controller my_ur5_wrist_3_joint_position_controller joint_state_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node pkg="robot_state_publisher" name="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/my_ur5/joint_states" />
  </node>

</launch>