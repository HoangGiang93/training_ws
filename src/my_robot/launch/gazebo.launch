<?xml version="1.0"?>
<launch>
    <!-- Export env variable so that gazebo finds our models -->
    <env name="GAZEBO_MODEL_PATH"
       value="$(find my_robot)/models:$(optenv GAZEBO_MODEL_PATH)" />

    <!-- Launch file parameters -->
    <arg name="paused"     default="true"/>
    <arg name="debug"      default="false"/>
    <arg name="gui"        default="true"/>
    <arg name="rate"       default="125" />
    <arg name="world_name" default="$(find my_robot)/worlds/my_ur5_world.world" />

    <!-- Start up simulated world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="paused"     value="$(arg paused)"/>
        <arg name="debug"      value="$(arg debug)"/>
        <arg name="gui"        value="$(arg gui)"/>
    </include>

    <param name="robot_description" command="$(find xacro)/xacro $(find my_robot)/urdf/my_ur5_gazebo.xacro" />
    
    <node pkg="gazebo_ros" name="urdf_spawner" type="spawn_model" respawn="false" output="screen"
        args="-urdf -param robot_description -model my_ur5 -z 0.594"/>
</launch>
